


<div class="container" style="justify-content:center;">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Home Page</h1>
		</div>
	</div>
</div>
<div class="container">
	<form class="form-inline" action="/charge" method="POST">
  	<div class="form-group">
    <label class="sr-only" for="exampleInputAmount">Amount (in dollars)</label>
    <div class="input-group">
      <div class="input-group-addon">$</div>
      <input type="hidden" class="form-control" id="exampleInputAmount"  value="70" name="AmountCharged">
      <div class="input-group-addon">.00</div>
    </div>
  	</div>
  	<!--<button type="submit" class="btn btn-primary">Transfer cash</button>-->
  	<script 
  		src = "https://checkout.stripe.com/checkout.js"
  		class="stripe-button"
  		data-key=<%=stripePublishableKey%>
  		data-amount = "70"
  		data-name="transaction"
  		data-description="money order transferring"
  		data-locale = "auto"
  		data-currency = "usd" 
  	></script>
	</form>
</div>




